<Page x:Class="Intāfēsu.Pages.SerialMonitor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Intāfēsu"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SerialMonitor">

	<Page.Resources>
		<local:ViewModelSerialMonitor x:Key="ViewModelSerialMonitor"/>
		<local:MonSerialList x:Key="MonSerialList"/>
	</Page.Resources>
	<Grid DataContext="{Binding Source={StaticResource ViewModelSerialMonitor}}">
		<Grid.RowDefinitions>
			<RowDefinition Height="35"></RowDefinition>
			<RowDefinition Height="*"></RowDefinition>
		</Grid.RowDefinitions>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1.5*"/>
				<ColumnDefinition Width="2.5*"/>
				<ColumnDefinition Width="4*"/>
			</Grid.ColumnDefinitions>
			<Button Margin="2,0" Grid.Column="0">Import CSV</Button>
			<Button Margin="2,0"  Grid.Column="1" Command="{Binding AddSerialNumberToDatabaseCommand}">Add Serial Number</Button>
			<TextBox Margin="2,0" Grid.Column="2" Text="{Binding Path=SerialNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
		</Grid>
		<DataGrid x:Name="MonitoredSerialsWpfGrid" Grid.Row="1" DataContext="{Binding Source={StaticResource MonSerialList}}" ItemsSource="{Binding MonitoredSerials}"/>

	</Grid>

</Page>
