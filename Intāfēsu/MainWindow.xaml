        Title="Intāfēsu" Height="450" Width="800"
        SaveWindowPosition="True"
        BorderThickness="0" 
        GlowBrush="Black">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"></ColumnDefinition>
			<ColumnDefinition Width="4*"></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<ListView Grid.Column="0" x:Name="MainNavigation" BorderThickness="0 0 1 0" Margin="0 0 5 0">
			<ListViewItem>
				<Button Style="{DynamicResource MahApps.Styles.Button.Dialogs}" x:Name="RecentRepairsPage" BorderThickness="0" Click="updatePageSource_OnClick">Recent Repairs</Button>
			</ListViewItem>
			<ListViewItem>
				<Button Style="{DynamicResource MahApps.Styles.Button.Dialogs}" x:Name="RecentBookinsPage" BorderThickness="0" Click="updatePageSource_OnClick">Recently Booked In</Button>
			</ListViewItem>
			<ListViewItem>
				<Button Style="{DynamicResource MahApps.Styles.Button.Dialogs}" BorderThickness="0" x:Name="RecentPartsInPage" Click="updatePageSource_OnClick">Recent Parts In</Button>
			</ListViewItem>
		</ListView>
		<Controls:TransitioningContentControl  Grid.Column="1" Transition="Left" >
			<Controls:MetroContentControl x:Name="FrameTransition">
				<Frame NavigationUIVisibility="Hidden" x:Name="MainFrame"/>
			</Controls:MetroContentControl>		
		</Controls:TransitioningContentControl>
	</Grid>

