<Window x:Class="Kurikku.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:local="clr-namespace:Kurikku"
                      Title="Kurikku by Kieran Wynne" Height="450" Width="800">
    <Grid margin="10">
        <Grid.ColumnDefinitions></Grid.ColumnDefinitions>
        <Button x:Name="ShowPartsCage" Content="Parts Cage" Click="ShowPartsCage_OnClick" />
        <Button x:Name="ShowLogistics" Content="Logistics" />
        <Button x:Name="ShowWorkshop" Content="Workshop" Click="ShowWorkshop_OnClick" />
        <Button x:Name="ShowOther" Content="Other" />
    </Grid>
</Window>